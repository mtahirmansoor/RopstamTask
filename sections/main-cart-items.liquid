<script>
(function() {
  function markBundleItems() {
    // Find all cart items
    var cartItems = document.querySelectorAll('.cart-item, [data-line-item]');
    
    cartItems.forEach(function(item) {
      // Check if item has bundle properties in its data
      var properties = item.querySelector('[data-cart-item-properties]');
      if (!properties) return;
      
      var propertiesText = properties.textContent || '';
      
      // Mark as bundle parent
      if (propertiesText.includes('_has_bundle') || propertiesText.includes('_bundle_includes')) {
        item.setAttribute('data-bundle-parent', 'true');
      }
      
      // Mark as bundle child
      if (propertiesText.includes('_is_bundle_item') || propertiesText.includes('_bundle_parent')) {
        item.setAttribute('data-bundle-child', 'true');
      }
      
      // Style bundle properties
      var propElements = item.querySelectorAll('.cart-item__property, [data-property]');
      propElements.forEach(function(prop) {
        var propText = prop.textContent.toLowerCase();
        
        if (propText.includes('bundle') || propText.includes('pair')) {
          prop.setAttribute('data-bundle-info', 'true');
        }
        
        if (propText.includes('discount') || propText.includes('save')) {
          prop.setAttribute('data-bundle-discount', 'true');
        }
      });
    });
  }
  
  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', markBundleItems);
  } else {
    markBundleItems();
  }
  
  // Run when cart updates
  document.addEventListener('cart:items-added', function() {
    setTimeout(markBundleItems, 500);
  });
  
  // For cart drawer
  var cartDrawer = document.querySelector('cart-drawer');
  if (cartDrawer) {
    var observer = new MutationObserver(markBundleItems);
    observer.observe(cartDrawer, { childList: true, subtree: true });
  }
})();
</script>

