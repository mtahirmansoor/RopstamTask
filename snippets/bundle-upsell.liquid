    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }
  .bundle-upsell-{{ block.id }} .bundle-selection-status {
    padding: 14px 20px;
    background: #fff3cd;
    border: 1px solid #ffc107;
    border-radius: 8px;
    margin-top: 15px;
    font-size: 14px;
    color: #856404;
    text-align: center;
    display: none;
    font-weight: 500;
  }
  .bundle-upsell-{{ block.id }} .bundle-selection-status.active {
    display: block;
  }
  .bundle-upsell-{{ block.id }} .bundle-selection-status.complete {
    background: #d4edda;
    border-color: #28a745;
    color: #155724;
  }
