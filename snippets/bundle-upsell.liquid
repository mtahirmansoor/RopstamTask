      flex-wrap: wrap;
      padding: 12px;
      gap: 12px;
    }
    .bundle-upsell-{{ block.id }} .bundle-item-label {
      width: 100%;
      margin-bottom: 5px;
    }
    .bundle-upsell-{{ block.id }} .color-options {
      flex-wrap: nowrap;
      overflow-x: auto;
      gap: 8px;
      width: 100%;
    }
    .bundle-upsell-{{ block.id }} .color-option {
      width: 60px;
      height: 60px;
    }
