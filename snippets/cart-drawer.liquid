<script>
/**
 * Bundle Cart Drawer Integration Script
 * Detects bundle items and adds appropriate styling classes
 */
(function() {
  'use strict';

  // Function to mark bundle items with data attributes
  function markBundleItemsInDrawer() {
    const cartItems = document.querySelectorAll('cart-drawer-items .cart-item, cart-items .cart-item');
    
    if (!cartItems.length) return;

    let bundleGroups = new Map();
    let bundleParents = new Map();

    // First pass: identify all items and their bundle relationships
    cartItems.forEach((item, index) => {
      const itemElement = item;
      const propertiesContainer = itemElement.querySelector('.cart-item__details');
      
      if (!propertiesContainer) return;

      // Get all property elements
      const propertyElements = propertiesContainer.querySelectorAll('.product-option');
      let itemProperties = {};
      
      propertyElements.forEach(prop => {
        const text = prop.textContent.trim();
        const match = text.match(/^([^:]+):\s*(.+)$/);
        if (match) {
          itemProperties[match[1].trim()] = match[2].trim();
        }
      });

      // Check if this is a bundle parent
      const hasBundleProperty = Array.from(propertyElements).some(prop => 
        prop.textContent.includes('_has_bundle') || 
        prop.textContent.includes('_bundle_includes')
      );

      // Check if this is a bundle child
      const isBundleChild = Array.from(propertyElements).some(prop => 
        prop.textContent.includes('_is_bundle_item') || 
        prop.textContent.includes('_bundle_parent')
      );

      // Get bundle group ID
      let bundleGroupId = null;
      propertyElements.forEach(prop => {
        const text = prop.textContent;
        if (text.includes('_bundle_group_id')) {
          bundleGroupId = text.split(':')[1]?.trim();
        }
      });

      if (hasBundleProperty && bundleGroupId) {
        bundleParents.set(bundleGroupId, index);
        if (!bundleGroups.has(bundleGroupId)) {
          bundleGroups.set(bundleGroupId, { parent: index, children: [] });
        }
      }

      if (isBundleChild && bundleGroupId) {
        if (!bundleGroups.has(bundleGroupId)) {
          bundleGroups.set(bundleGroupId, { parent: null, children: [] });
        }
        bundleGroups.get(bundleGroupId).children.push(index);
      }
    });

    // Second pass: apply styling
    cartItems.forEach((item, index) => {
      item.removeAttribute('data-bundle-parent');
      item.removeAttribute('data-bundle-child');
      
      // Check if this item is a bundle parent
      bundleGroups.forEach((group, groupId) => {
        if (group.parent === index) {
          item.setAttribute('data-bundle-parent', 'true');
          
          // Add visual indicator for bundle includes
          const detailsContainer = item.querySelector('.cart-item__details');
          const propertyElements = detailsContainer?.querySelectorAll('.product-option');
          
          propertyElements?.forEach(prop => {
            const text = prop.textContent.trim();
            if (text.includes('_bundle_includes')) {
              const bundleInfo = text.split(':')[1]?.trim();
              if (bundleInfo && !detailsContainer.querySelector('.bundle-includes-text')) {
                const bundleText = document.createElement('div');
                bundleText.className = 'bundle-includes-text';
                bundleText.innerHTML = `<strong>Bundle:</strong> ${bundleInfo}`;
                detailsContainer.appendChild(bundleText);
              }
            }
          });
        }
        
        if (group.children.includes(index)) {
          item.setAttribute('data-bundle-child', 'true');
          
          // Add screen reader text
          const nameElement = item.querySelector('.cart-item__name');
          if (nameElement && !nameElement.querySelector('.bundle-sr-text')) {
            const srText = document.createElement('span');
            srText.className = 'bundle-sr-text';
            srText.textContent = '(Bundle Item)';
            nameElement.appendChild(srText);
          }
        }
      });

      // Style individual property elements
      const propertyElements = item.querySelectorAll('.product-option');
      propertyElements.forEach(prop => {
        const text = prop.textContent.toLowerCase();
        
        // Mark bundle info properties
        if (text.includes('bundle') && !text.includes('_bundle_group_id')) {
          prop.setAttribute('data-bundle-info', 'true');
        }
        
        // Mark discount properties
        if (text.includes('discount') || text.includes('save')) {
          prop.setAttribute('data-bundle-discount', 'true');
        }
        
        // Mark position properties
        if (text.includes('item_position') || text.includes('of')) {
          prop.setAttribute('data-bundle-position', 'true');
        }
      });
    });

    // Add separators between bundle groups
    addBundleGroupSeparators(cartItems, bundleGroups);
  }

  // Function to add visual separators between bundle groups
  function addBundleGroupSeparators(cartItems, bundleGroups) {
    // Remove existing separators
    document.querySelectorAll('.bundle-group-separator').forEach(sep => sep.remove());

    bundleGroups.forEach((group, groupId) => {
      if (group.children.length > 0) {
        const lastChildIndex = Math.max(...group.children);
        const lastChildItem = cartItems[lastChildIndex];
        
        if (lastChildItem && lastChildIndex < cartItems.length - 1) {
          const separator = document.createElement('tr');
          separator.className = 'bundle-group-separator';
          separator.innerHTML = '<td colspan="4"><div class="bundle-group-separator"></div></td>';
          lastChildItem.parentNode.insertBefore(separator, lastChildItem.nextSibling);
        }
      }
    });
  }

  // Run on initial load
  function init() {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', markBundleItemsInDrawer);
    } else {
      markBundleItemsInDrawer();
    }
  }

  // Run when cart updates via AJAX
  if (typeof subscribe !== 'undefined') {
    subscribe('cart-update', function() {
      setTimeout(markBundleItemsInDrawer, 300);
    });
  }

  // Watch for cart drawer opening
  const observer = new MutationObserver(function(mutations) {
    mutations.forEach(function(mutation) {
      if (mutation.type === 'childList' || mutation.type === 'attributes') {
        const cartDrawer = document.querySelector('cart-drawer-items');
        if (cartDrawer && cartDrawer.innerHTML.length > 0) {
          setTimeout(markBundleItemsInDrawer, 200);
        }
      }
    });
  });

  // Observe cart drawer
  const cartDrawerElement = document.querySelector('cart-drawer');
  if (cartDrawerElement) {
    observer.observe(cartDrawerElement, {
      childList: true,
      subtree: true,
      attributes: true,
      attributeFilter: ['class']
    });
  }

  // Listen for custom cart events
  document.addEventListener('cart:items-added', function() {
    setTimeout(markBundleItemsInDrawer, 400);
  });

  // Initialize
  init();

  // Re-run after cart updates from cart.js
  const originalCartUpdate = window.CartItems?.prototype?.onCartUpdate;
  if (originalCartUpdate) {
    window.CartItems.prototype.onCartUpdate = function() {
      return originalCartUpdate.call(this).then(() => {
        setTimeout(markBundleItemsInDrawer, 300);
      });
    };
  }

})();
</script>

