  OR create: snippets/bundle-cart-drawer-styles.liquid
{% endcomment %}

<style>
  /* ============================================
     BUNDLE PARENT ITEM STYLING
     ============================================ */
  .cart-item[data-bundle-parent="true"] {
    border-left: 3px solid #28a745;
    background: linear-gradient(to right, rgba(40, 167, 69, 0.05) 0%, transparent 100%);
    position: relative;
  }

  .cart-item[data-bundle-parent="true"] .cart-item__name::after {
    content: 'üéÅ Bundle';
    display: inline-block;
    margin-left: 8px;
    padding: 3px 10px;
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    color: white;
    font-size: 10px;
    font-weight: 700;
    border-radius: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    vertical-align: middle;
    box-shadow: 0 2px 4px rgba(40, 167, 69, 0.3);
  }

  /* Bundle includes text styling */
  .cart-item[data-bundle-parent="true"] .bundle-includes-text {
    display: block;
    font-size: 12px;
    color: #28a745;
    font-weight: 600;
    margin-top: 6px;
    padding: 6px 10px;
    background: rgba(40, 167, 69, 0.1);
    border-radius: 6px;
    border-left: 3px solid #28a745;
  }

  /* ============================================
     BUNDLE CHILD ITEMS (SUB-LINE) STYLING
     ============================================ */
  .cart-item[data-bundle-child="true"] {
    background: #f8f9fa;
    border-left: 3px solid #6c757d;
    position: relative;
    padding-left: 20px !important;
    margin-top: 2px;
  }

  /* Tree connector line */
  .cart-item[data-bundle-child="true"]::before {
    content: '‚îî‚îÄ';
    position: absolute;
    left: 5px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-weight: bold;
    font-size: 14px;
    line-height: 1;
  }

  /* Reduce image size for bundle children */
  .cart-item[data-bundle-child="true"] .cart-item__image {
    max-width: 60px;
    opacity: 0.9;
  }

  /* Product name styling for children */
  .cart-item[data-bundle-child="true"] .cart-item__name {
    font-size: 0.9em;
    color: #6c757d;
    font-weight: 500;
  }

  .cart-item[data-bundle-child="true"] .cart-item__name::before {
    content: '‚îú ';
    color: #6c757d;
    margin-right: 4px;
    font-weight: bold;
  }

  /* Price styling for bundle children - show discounted price prominently */
  .cart-item[data-bundle-child="true"] .product-option {
    font-size: 0.85em;
  }

  .cart-item[data-bundle-child="true"] .cart-item__totals {
    opacity: 0.8;
  }

  /* Reduce quantity controls for bundle children */
  .cart-item[data-bundle-child="true"] .quantity__input {
